{
	"apiVersion": 2,
	"name": "block-test/text-block",
	"version": "0.1.0",
	"title": "Text Block",
	"category": "text",
	"icon": "text-page",
	"description": "A block of text.",
	"keywords": ["text", "paragraph"],
	"supports": {
		"html": false,
		"color": false,
		"spacing": {
			"padding": true
		}
	},
	"styles": [
		{
			"name": "squared",
			"label": "Squared",
			"isDefault": true
		},
		{
			"name": "rounded",
			"label": "Rounded"
		}
	],
	"example": {
		"attributes": {
			"text": "This is some text",
			"shadow": true
		}
	},
	"textdomain": "text-block",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
	"attributes": {
		"text": {
			"type": "string",
			"source": "html",
			"selector": "p"
		},
		"textAlignment": {
			"type": "string",
			"default": "left"
		},
		"shadow": {
			"type": "boolean",
			"default": false
		},
		"shadowOpacity": {
			"type": "number",
			"default": 30
		},
		"backgroundColor": {
			"type": "string",
			"default": "yellow"
		},
		"textColor": {
			"type": "string",
			"default": "gray"
		},
		"customBackgroundColor": {
			"type": "string"
		},
		"customTextColor": {
			"type": "string"
		},
		"gradient": {
			"type": "string"
		},
		"style": {
			"type": "object",
			"default": {
				"spacing": {
					"padding": {
						"top": "50px",
						"right": "50px",
						"bottom": "50px",
						"left": "50px"
					}
				}
			}
		}
	}
}
